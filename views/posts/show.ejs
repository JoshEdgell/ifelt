<!DOCTYPE html>
<html>
  <head>
    <% include ../../partials/nav.ejs %>
    <% include ../../partials/head.ejs %>
    <meta charset="utf-8">
    <title>Show Individual Post</title>
  </head>
  <body>
    <div class="centerText">
      <h3 class="pageHeader"><%=post.title%></h1>
        <div class="byLine">
          <small>By: <%=post.authorFirstName%> <%=post.authorLastName%></small>
        </div>
        <div class="showPostText">
          <p><%=post.postBody%></p>

          <% if (post.comments.length === 0) { %>
            <h6>There are no comments on this post - be the first to comment!</h6>
            <form action="/posts/comment/<%=post._id%>" method="POST">
              <textarea name="text" class="commentTextArea"></textarea>
              <input type="submit" class="addCommentButton" value="Add Comment"/>
            </form>
          <% } else { %>
              <h5>Comments</h5>
            <% for (let i = 0; i < post.comments.length; i++) { %>
              <div class="commentDiv">
                <div class="commentText">
                  <p><%=post.comments[i].text%></p>
                </div>
                <hr>
              </div>


          <% } %>
          <h6>Add a comment</h6>
          <form action="/posts/comment/<%=post._id%>" method="POST">
            <textarea name="text" class="commentTextArea"></textarea>
            <input type="submit" class="addCommentButton" value="Add Comment"/>
          </form>

          <% } %>

        </div>

      <div class="horizontalList">
        <ul>
          <li><a href="/posts">All Posts</a></li>
          <li><a href="/feelings">All Feelings</a></li>
        </ul>
      </div>
    </div>
    <% include ../../partials/footer.ejs %>
  </body>
</html>
